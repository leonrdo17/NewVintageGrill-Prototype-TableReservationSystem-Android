<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tablefloor"
    tools:context=".ui.table.TableFragment">

    <ImageView
        android:id="@+id/tableNumberOne"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="60dp"
        android:background="#27FFFFFF"
        android:src="@drawable/customertable"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.14"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <ImageView
        android:id="@+id/tableNumberTwo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="16dp"
        android:background="#27FFFFFF"
        android:src="@drawable/customertable"
        app:layout_constraintStart_toEndOf="@+id/tableNumberOne"
        app:layout_constraintTop_toTopOf="@+id/tableNumberOne" />

    <ImageView
        android:id="@+id/tableNumberThree"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="16dp"
        android:background="#27FFFFFF"
        android:src="@drawable/customertable"
        app:layout_constraintStart_toEndOf="@+id/tableNumberTwo"
        app:layout_constraintTop_toTopOf="@+id/tableNumberTwo" />

    <ImageView
        android:id="@+id/tableNumberFour"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="64dp"
        android:background="#27FFFFFF"
        android:src="@drawable/customertable"
        app:layout_constraintStart_toStartOf="@+id/tableNumberOne"
        app:layout_constraintTop_toBottomOf="@+id/tableNumberOne" />

    <ImageView
        android:id="@+id/tableNumberFive"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="16dp"
        android:background="#27FFFFFF"
        android:src="@drawable/customertable"
        app:layout_constraintStart_toEndOf="@+id/tableNumberFour"
        app:layout_constraintTop_toTopOf="@+id/tableNumberFour" />

    <ImageView
        android:id="@+id/tableNumberSix"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="16dp"
        android:background="#27FFFFFF"
        android:src="@drawable/customertable"
        app:layout_constraintStart_toEndOf="@+id/tableNumberFive"
        app:layout_constraintTop_toTopOf="@+id/tableNumberFive" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:fontFamily="@font/rosario"
        android:text="PLEASE SELECT THE TABLE"
        android:textColor="@color/common_google_signin_btn_text_dark_pressed"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>